PREFIX roh: <https://w3id.org/roh#>
PREFIX ro: <https://w3id.org/roh/mirror/obo/ro#>
PREFIX bibo: <http://purl.org/ontology/bibo/>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX foaf: <https://w3id.org/roh/mirror/foaf#>
PREFIX unesco: <https://w3id.org/roh/unesco-individuals#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
prefix vivo: <https://w3id.org/roh/mirror/vivo#>

SELECT DISTINCT ?centro ?project
WHERE {
  ?centro roh:grantedBy ?fundingAmount ;
          a vivo:Company .
  ?funding ro:BFO_0000051 ?fundingAmount ;
           roh:fundedBy ?fundingProgram .
  ?project roh:isSupportedBy ?funding .
  OPTIONAL {
	?project roh:projectStatus ?projectStatus .
  }
  FILTER (!BOUND(?projectStatus) || ?projectStatus != "PROPOSAL_SUBMITTED")
}
ORDER BY ASC(?centro)